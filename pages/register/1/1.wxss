/* pages/1.wxss */
.title {
  margin-bottom: 20rpx;
  margin-top: 5rpx;
  text-align: center;
  font-size: 24rpx;
}

.radio-identity {
  display: flex;
  height: 136rpx;
  margin: 0 0 0 5%;
}

.on { 
  background-color: rgb(47, 111, 196);
  color: white
}

.label-identity {
  width: 47%;
  position: relative;
  font-size: 36rpx;
  padding-top: 44rpx;
  text-align: center;
  border: lightgray solid 1rpx;
  border-radius: 7.5rpx;
}

/* 输入框 */
.input {
  width: 80%;
  margin: 10%;
  font-size: 36rpx;
  text-align: center;
  border-bottom: darkgrey solid 1rpx;
}

/* 学院选择框 */
.select_box {
  background: #fff;
  width: 620rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: left;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 86rpx;
  border: 1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 36rpx;
  flex: 1;
  text-align: center;
  color: #707070;
  line-height: 86rpx;
  height: 86rpx;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 86rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  z-index: 999;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: rgb(102, 102, 102);
}

/* 校区选择 */
.radio-school {
  height: 220rpx;
  display: flex;
  margin-bottom: 50rpx;
}
.label-school {
  width: 25%;
  position: relative;
  font-size: 30rpx;
  margin: 60rpx 5% 0 5%;
  padding-top: 60rpx; 
  text-align: center;
  border: lightgray solid 1rpx;
  border-radius: 50%;
}

/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color: lightblue;
}
button {
  margin-right: 20px;
  width: 30%;
}