/* pages/coach/coachOrder/coachOrder.wxss */
.contain {
  width:750rpx;
  height:100vh;
  margin:0;
  padding:0;
}
.person-message {
  width:750rpx;
  height:350rpx;
}
.head-image {
  width:150rpx;
  height:150rpx;
  margin:0 auto;
  border-radius:50%;
  overflow: hidden;
}
.head-image image {
  width:inherit;
  height:inherit;
}
.text {
  width:750rpx;
  height:50rpx;
  text-align:center;
  margin-top:10rpx;
}
.name {
  margin-top:30rpx;
  font-size:45rpx;
  font-weight:bold;
}
.message {
  font-size:30rpx;
  margin-top:20rpx;
}
.order-button {
  width:600rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  color:rgb(219, 179, 235);
  border:1rpx solid rgb(219, 179, 235);
  border-radius:10rpx;
  margin:0 auto;
}
.hint {
  margin-top:30rpx;
  font-size:30rpx;
}
.rule {
  width:300rpx;
  height:50rpx;
  font-size:30rpx;
  text-align:center;
  float:right;
  margin-right:30rpx;
}
.order-box {
  width:750rpx;
  height:400rpx;
  margin-top:20rpx;
  display:flex;
  justify-content:center;
}
.order-box>view {
  width:350rpx;
  height:400rpx;
  background-color: none;
  border:0.5rpx solid rgba(189, 186, 186, 0.332);
  border-radius:10rpx;
}
.order-box>view>image {
  width:60rpx;
  height:60rpx;
  margin: 10rpx 20rpx;
}
.coach-text {
  width:300rpx;
  height:300rpx;
  margin:0 auto;
  color:gray;
}
.coach-text view {
  width:300rpx;
  height:50rpx;
  line-height:100rpx;
  text-align:center;
}