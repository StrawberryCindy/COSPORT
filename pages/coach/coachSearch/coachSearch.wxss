.contain {
  width:750rpx;
  height:100vh;
  margin:0;
  padding:0;
  background-color: rgb(149, 181, 192);
}
.callback-box {
  width:750rpx;
  height:65rpx;
  background-color:rgba(255,255,255,0.6);
}
.callback-image {
  width:70rpx;
  height:50rpx;
  margin-top:15rpx;
  margin-left:20rpx;
}
.message-menu {
  width:750rpx;
  height:200rpx;
  display:flex;
  justify-content:space-around;
  background-color:rgba(255,255,255,0.6);
}
.message-menu-left {
  width:250rpx;
  height:150rpx;
  margin-top:50rpx;
}
.message-menu-left view {
  height:75rpx;
  line-height:75rpx;
}
.message-menu-sport {
  width:250rpx;
  text-align: left;
  padding-left:30rpx;
  font-size:45rpx;
  font-weight:bold;
}
.message-menu-school {
  width: 100rpx;
  float:left;
  font-size:30rpx;
  text-align: center;
}
.message-menu-school-area {
  width:150rpx;
  float:left;
  font-size:30rpx;
}
.down-menu-box {
  width:200rpx;
  height:60rpx !important;
  line-height:60rpx !important;
  padding:0 100rpx;
}
.down-menu {
  height:inherit;
}
.coach-item-box {
  width:700rpx;
  height:calc(100vh - 267rpx);
  box-sizing:border-box;
  margin:0 auto;
}