<view class="down-menu">
  <view class="down-menu-select" bindtap="hindDownMenuItem">
    <view style="width:{{downMenuData.width}}">{{ dataActive }}</view>
    <image class="down-image" src="../.../../../images/down.svg"/>
  </view>
  <view class="down-menu-item-box" wx:if="{{isDownMenuItem}}">
    <view class="down-menu-item" style="width:{{downMenuData.width}}" wx:for="{{downMenuData.items}}" wx:key="index" bindtap="selectDownMenuItem" data-index="{{index}}"> {{ item }} </view>
  </view>
</view>